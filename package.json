{
  "name": "ts-lib-starter",
  "version": "0.0.0-development",
  "description": "Typescript library starter",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "author": {
    "name": "Alex Feinstein",
    "url": "https://github.com/psxcode"
  },
  "homepage": "https://github.com/psxcode/ts-lib-starter",
  "repository": {
    "type": "git",
    "url": "https://github.com/psxcode/ts-lib-starter"
  },
  "license": "MIT",
  "private": false,
  "scripts": {
    "lint": "tslint -t codeFrame -p tsconfig.lint.json",
    "test": "npm run test:once",
    "test:once": "nyc npm run mocha",
    "test:watch": "npm run mocha -- --watch",
    "test:coverage:generate": "nyc report --reporter=json",
    "test:coverage:report": "codecov -f coverage/*.json",
    "build": "npm run clean:build && npm run webpack",
    "clean:build": "rimraf dist",
    "clean:test": "rimraf coverage .nyc_output",
    "commit": "git-cz",
    "prepush": "npm test",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "mocha": "mocha-webpack --opts mocha.opts",
    "webpack": "webpack"
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/mocha": "^2.2.44",
    "@types/node": "^8.0.47",
    "@types/sinon": "^4.0.0",
    "chai": "^4.1.2",
    "codecov": "^3.0.0",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "istanbul-instrumenter-loader": "^3.0.0",
    "mocha": "^4.0.1",
    "mocha-webpack": "^1.0.1",
    "nyc": "^11.3.0",
    "opn-cli": "^3.1.0",
    "rimraf": "^2.6.2",
    "semantic-release": "^8.2.0",
    "sinon": "^4.1.1",
    "source-map-support": "^0.5.0",
    "ts-loader": "^3.1.1",
    "tslint": "^5.8.0",
    "tslint-config-standard": "^7.0.0",
    "tslint-loader": "^3.5.3",
    "typescript": "^2.6.1",
    "webpack": "^3.8.1",
    "webpack-node-externals": "^1.6.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "instrument": false,
    "sourceMap": false
  }
}
